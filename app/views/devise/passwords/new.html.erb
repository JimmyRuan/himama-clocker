<!--<h2>Forgot your password?</h2>-->

<%= form_for(resource, as: resource_name, url: password_path(resource_name),
             html: { method: :post, class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 w-1/3'}) do |f| %>
  <div class="text-center w-full">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <div class="text-lg text-center w-full">Forgot your password?</div>

  <div class="mb-4">
    <%= f.label :email, :class=> 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
                      placeholder: 'Email',
                      class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="mb-4">
    <%= f.submit "Send me reset password instructions",
                 class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>

<%= form_for(resource, as: resource_name,
             html: {class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 w-1/3'},
             url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="text-lg text-center w-full">Log In</div>

  <div class="mb-4">
    <%= f.label :email, :class=> 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
                      placeholder: 'Email',
                      class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="mb-4">
    <%= f.label :password, :class=> 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.password_field :password, autocomplete: "current-password",
                         class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3"></div>
      <label class="md:w-2/3 block text-gray-500 font-bold">
        <!--      <input class="mr-2 leading-tight" type="checkbox">-->
        <%= f.check_box :remember_me, class: 'mr-2 leading-tight'%>
        <span class="text-sm">
        Remember me
      </span>
      </label>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.submit "Log In", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
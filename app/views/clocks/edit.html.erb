<!--<h1>Editing Clock</h1>-->

<%#= render 'form', clock: @clock %>

<!--<%#= link_to 'Show', @clock %> |-->
<%#= link_to 'Back', clocks_path %>


<%= form_with(model: @clock, local: true,
              html: {class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 w-1/3'}) do |f| %>
  <div class="text-lg text-center w-full">Update Clock In/Out</div>

  <div class="mb-4">
    <%= f.label 'Clock-In Time', :class=> 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.text_field :clock_in_time_formatted, autofocus: true, autocomplete: "Clock-In Time",
                     value: display_time(@clock.clock_in_time),
                     placeholder: 'Clock-In Time',
                     class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="mb-4">
    <%= f.label 'Clock-Out Time', :class=> 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.text_field :clock_out_time_formatted, autofocus: true, autocomplete: "Clock-Out Time",
                     value: display_time(@clock.clock_out_time),
                     placeholder: 'Clock-Out Time',
                     class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="mb-4">
    <%= f.submit "Update", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  </div>
<% end %>
